jQuery(function(i){var n={trigger:".pntable table"};i.fn.AdaptiveTable=function(t){var a=i.extend({},n,t).trigger;function e(){i(a).each(function(){i(this).hasClass("has_adaptive_wrap")||(i(this).wrap('<div class="adaptive_wrap"></div>'),i(this).addClass("has_adaptive_wrap"));var t=i(this).height();i(".adaptive_wrap").css({"min-height":t+"px"}),function(t){t.removeClass("has_adaptive").addClass("not_adaptive"),i(".not_adaptive_content").show(),i(".has_adaptive_content").hide(),t.find("thead").show(),t.find("tbody tr").removeClass("one_item"),t.find("tbody td").removeClass("one_item_line"),t.find("tbody td").each(function(t){i(this).find(".one_item_label").remove()})}(i(this)),i(this).parents(".adaptive_wrap").width()<i(this).width()&&function(t){t.addClass("has_adaptive").removeClass("not_adaptive"),i(".not_adaptive_content").hide(),i(".has_adaptive_content").show(),t.find("thead").hide();var e=[];t.find("thead:first tr th").each(function(t){e[t]=i(this).html()}),t.find("tbody tr").each(function(t){i(this).addClass("one_item"),i(this).find("td").each(function(t){var a=e[t];i(this).addClass("one_item_line"),i(this).find(".one_item_content").length<1&&i(this).wrapInner('<span class="one_item_content">'),i(this).find(".one_item_label").length<1&&i(this).prepend('<span class="one_item_label">'+a+":</span>")})})}(i(this)),i(".adaptive_wrap").css({"min-height":"100%"})})}return i(window).on("resize",function(){e()}),e(),this}});